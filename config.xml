<?xml version='1.0' encoding='utf-8'?>
<widget id="com.megster.battery" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Battery Test</name>
    <description>
        Cordova Bluetooth Plugin to read Battery Service - modified to scan BLE
    </description>
    <author href="https://github.com/don">
           Don Coleman
    </author>
    <preference name="orientation" value="portrait" />
    <gap:platform name="android" />
    <gap:plugin name="cordova-plugin-ble-central" source="npm" />
    <!-- Allow links to example.com -->
    <allow-navigation href="https://hulldisplay.000webhostapp.com/*" />
    <!-- Allow links to web pages to open in a browser -->
    <allow-intent href="https://hulldisplay.000webhostapp.com/*" />
	
    <content src="index.html" />
    <access origin="*" />
</widget>
